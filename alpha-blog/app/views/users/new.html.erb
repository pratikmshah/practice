<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">

    <h1 class="text-center">Signup for Alpha Blog</h1>

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <!-- username -->
    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label :username %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :username, class: 'form-control', placeholder: "Enter username", autofocus: true %>
      </div>
    </div>

    <!-- email -->
    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: 'form-control', placeholder: "Enter email" %>
      </div>
    </div>

    <!-- password -->
    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: 'form-control', placeholder: "Enter password", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit "Sign up", class: "btn btn-primary btn-md" %>
      </div>
    </div>

    <% end %>

    <div class="col-xs-4 col-xs-offset-4">
      <%= link_to "[ Cancel request and return to articles lists ]", articles_path %>
    </div>

  </div>
</div>